package patterns;

import java.util.Scanner;

public class Pattern28 {

	public static void main(String[] args) {
		
		int num, i, j, k;
		
		Scanner scanner = new Scanner(System.in);
		num = scanner.nextInt();
		
		i = 1;
		while( i <= num ) {
			
//			For Printing Spaces
			j = 1;
			while( j <= ( num - i ) ) {
				System.out.println(" ");
				j++;
			}
			
//			For Printing *
			k = 1;
			while( k <= i ) {
				System.out.println("*");
				k++;
			}
			
			
			
			System.out.print("\n");
			i++;
		}

	}

}
