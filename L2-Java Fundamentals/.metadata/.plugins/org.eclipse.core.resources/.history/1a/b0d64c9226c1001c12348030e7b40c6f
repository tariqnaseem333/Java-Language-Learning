package patterns;

import java.util.Scanner;

public class Pattern30 {

	public static void main(String[] args) {
		
//		For Printing Pattern
//		    *
//		   ***
//		  *****
//		   ***
//		    *
		
		int num, i, j, k, r, inc, dec, N;
		
		Scanner scanner = new Scanner(System.in);
		num = scanner.nextInt();
		N = num - 2;
		
		i = 1;
		while( i <= N ) {
			
//			For Printing decreasing Spaces
			j = 1;
			while( j <= ( N - i ) ) {
				System.out.print(" ");
				j++;
			}
			
//			For Printing increasing Stars
			j = 1;
			while( j <= i ) {
				System.out.print("*");
				j++;
			}
			
//			For Printing decreasing Stars
			k = 1;
			while( k <= ( i - 1 ) ) {
				System.out.print("*");
				k++;
			}
			
			

				
			System.out.print("\n");
			i++;
		}

	}

}
