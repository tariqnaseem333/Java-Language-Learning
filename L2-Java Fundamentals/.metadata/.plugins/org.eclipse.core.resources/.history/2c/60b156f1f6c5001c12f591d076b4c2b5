package patterns;

import java.util.Scanner;

public class Pattern33 {

	public static void main(String[] args) {
		
//		Half Diamond Patter : Pattern to Print for n = 5
//		*
//		*1*
//		*121*
//		*12321*
//		*121*
//		*1*
//		*
		
		int num, i, j, k, p;
		
		Scanner scanner = new Scanner(System.in);
		num = scanner.nextInt();
		
		i = 1;
		while( i <= ( 2 *num + 1 ) ) {
			
			p = 1;
			j = 1;
			while( j <= ( 2*(i-1) + 1 ) ) {
				
				if( j == 1 || j == i ) {
					System.out.print("*");
				} else {
					System.out.print(p);
					p++;
				}
			}
			
			
			System.out.print("\n");
			i++;
		}
		
		
		
		

	}

}
