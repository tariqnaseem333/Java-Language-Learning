package patterns;

import java.util.Scanner;

public class Pattern35 {

	public static void main(String[] args) {

//		For Printing Pattern for n = 4
//		   1
//		  121
//		 12321
//	    1234321
//		 12321
//		  121
//		   1
			


		int number, num, n, N, i, j, k, l, r, p;
	
//		Taking Input from the user
		Scanner scanner = new Scanner(System.in);
		number = scanner.nextInt();
		
		
		
		num = 2 * number - 1;
		N = (int)Math.ceil(num/2.0);
		n = (int)Math.floor(num/2.0);
		
		
		
//		For Upper Half of the Pattern 
		i = 1;
		while( i <= N ) {
			
//			For Printing Spaces
			k = N - i;
			while ( k >= 1 ) {
				System.out.print(" ");
				k--;
			}
			
//			For Printing Incrementing Numbers
			p = 1;
			j = 1;
			while( j <= 2 * i - 1 ) {
				System.out.print(p);
				p++;
				j++;
			}
			
//			For Printing Decrementing Numbers
			p = i - 1;
			l = 1;
			while( l <= i - 1 ) {
				System.out.print(p);
				p--;
				l++;
			}
			
			
			
			
			
			
			i++;
			System.out.print("\n");
		}
	

	}

}
