package patterns;

import java.util.Scanner;
import java.lang.Math;

public class Pattern30 {

	public static void main(String[] args) {

		//		For Printing Pattern
		//		    *
		//		   ***
		//		  *****
		//		   ***
		//		    *

		int num, i, j, k, q, r, inc, dec;
		double N, n;

		Scanner scanner = new Scanner(System.in);
		num = scanner.nextInt();
		
//		Setting Upper Range 
		N = Math.ceil( num/2.0 );
//		Setting Lower Range
		n = Math.floor( num/2.0 );
		
//		For Printing Upper Half of the Pattern
		i = 1;
		while ( i <= (int)N ) {
			
//			For Printing decreasing Spaces
			k = 1;
			while( k <= ( (int)N - i ) ) {
				System.out.print(" ");
				k++;
			}
			
//			For Printing increasing Stars
			q = 1;
			while( q <= i ) {
				System.out.print("*");
				q++;
			}
			
			System.out.print("\n");
			i++;
		}
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		

