package patterns;

import java.util.Scanner;

public class Pattern24 {

	public static void main(String[] args) {
		
//		Pattern to Print
//		333
//		22
//		1
		
		int n, i, spaces, num;
		
		Scanner scanner = new Scanner(System.in);
		n = scanner.nextInt();
		
		i = 1;
		while( i <= n ) {
			
			spaces = 1;
			while( spaces <= (n - i) ) {
				System.out.print(" ");
				spaces++;
			}
			num = 1;
			while( num <= i ) {
				System.out.print(num);
				num++;
			}
			System.out.print("\n");
			i++;
		}
		


	}

}
