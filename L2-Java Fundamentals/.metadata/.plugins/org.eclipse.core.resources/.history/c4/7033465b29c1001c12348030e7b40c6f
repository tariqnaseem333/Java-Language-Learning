package patterns;

import java.util.Scanner;

public class Pattern30 {

	public static void main(String[] args) {
		
//		For Printing Pattern
//		    *
//		   ***
//		  *****
//		   ***
//		    *
		
		int num, i, j, k, q, r, inc, dec, N;
		
		Scanner scanner = new Scanner(System.in);
		num = scanner.nextInt();
		N = num - 2;
		
		i = 1;
		while( i <= num ) {
			
//			For Printing decreasing Spaces
			j = 1;
			while( j <= ( N - i ) ) {
				System.out.print(" ");
				j++;
			}
			
//			For Printing increasing Spaces
//			k = 1;
//			while( k <= ( num ) ) {
//				System.out.print(" ");
//				k++;
//			}
			
//			For Printing increasing Stars
			q = 1;
			while( q <= num ) {
				System.out.print("*");
				if ( q )
			}
			
//			For Printing decreasing Stars
			r = num - 2;
			while( r >= 1 ) {
				System.out.print("*");
				r = r -2;
			}
			
			

				
			System.out.print("\n");
			i++;
		}

	}

}
