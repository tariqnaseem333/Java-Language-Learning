package patterns;

import java.util.Scanner;

public class Pattern20 {

	public static void main(String[] args) {
		
//		Print Square Pattern for n = 4
//		  *
//		 **
//		***
		
		int n, i, j, k;
		
		Scanner scanner = new Scanner(System.in);
		n = scanner.nextInt();
		
		i = 1;
		while( i <= n ) {
			j = 1;
			while( j <= (n - i) ) {
				System.out.print(" ");
				j++;
			}
			k = 1;
			while( k <= n ) {
				System.out.print("*");
				k++;
			}
			System.out.print("\n");
			i++;
		}

	}

}
